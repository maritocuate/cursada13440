html
  head
    title Productos App
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css')
  body(style='background:#e9ecef')
    .jumbotron
      h1 Vista de Productos
      br

      if hayProductos
        .table-responsive
          table.table.table-dark
            tr
              th Nombre
              th Precio
              th Foto

            each val in productos
              tr
                td= val.title
                td= '$'+val.price
                td
                  img(src= val.thumbnail, width='50')