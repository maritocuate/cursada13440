<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />  
    <title>Productos App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/index.js"></script>
  </head>
  <body style="background:#e9ecef;">

    <%- include('add.ejs') %>

    <div class="jumbotron">
      <h1>Vista de Productos</h1>
      <br>
      
      <% if(hayProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                <% for(var i=0; i<productos.length; i++) { %>
                    <tr>
                      <td><%= productos[i].title %></td>
                      <td><%= productos[i].price %></td>
                      <td><img width='50' src=<%= productos[i].thumbnail %>></img></td>
                    </tr>
                <% } %>
            </table>
        </div>
      <% }else{ %>
          <h3 class="alert alert-warning">No se encontraron productos</h3>
      <% } %>
    </div>
  </body>
</html>
